<%- include('templates/header-back-arrow') %>
<div class="container mt-5">
    <div class="card">
        <div class="card-header text-center">
            <h1>Order Confirmed</h1>
        </div>
        <!-- Start of card body -->
        <div class="card-body">
            <p><%= username %>,</p>
            <p>Your order has been confirmed! A receipt has been sent to your email.</p>
            <p>Here are the details of your purchase:</p>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">Order Number:</th>
                        <td id="orderNumber"></td>
                    </tr>
                    <tr>
                        <th scope="row">Order Date:</th>
                        <td id="orderDate"></td>
                    </tr>
                </tbody>
            </table>
            <h3>Items Ordered</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Item ID</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody id="orderItems">
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="2">Total</th>
                        <th id="totalAmount">$0.00</th>
                    </tr>
                </tfoot>
            </table>
            <p>If you have any questions, feel free to contact our customer service team.</p>
            <p>Best regards,</p>
            <p>Galaxy Getaways</p>
        </div>
        <!-- End of card body -->
<script>
    var items = [
        { name: 'Departing Flight', item_ID: 'VAN-MOON 001', price: '2000.00' },
        { name: 'Returning Flight', item_ID: 'MOON-VAN 001', price: '3000.00' },
        { name: 'Hotel', item_ID: 'Crater Cove Hotel', price: '5009.00' }
    ];

document.addEventListener('DOMContentLoaded', function() {
    function generateOrderNumber() {
            let orderNumber = 'ORD-' + Math.floor(100000 + Math.random() * 900000 );
            document.getElementById('orderNumber').textContent = orderNumber;
        }
    function formatDate(date) {
        let day = String(date.getDate()).padStart(2, '0');
        let month = String(date.getMonth() + 1).padStart(2, '0');
        let year = date.getFullYear();
        return month + '/' + day + '/' + year;
    }
    function populateOrderItems(items) {
            var orderItemsContainer = document.getElementById('orderItems');
            orderItemsContainer.innerHTML = ''; // Clear existing items if any

            var totalAmount = 0;

            items.forEach(function(item) {
                var row = document.createElement('tr');

                var itemName = document.createElement('td');
                itemName.textContent = item.name;
                row.appendChild(itemName);

                var itemQuantity = document.createElement('td');
                itemQuantity.textContent = item.item_ID;
                row.appendChild(itemQuantity);

                var itemPrice = document.createElement('td');
                itemPrice.textContent = '$' + item.price;
                row.appendChild(itemPrice);

                orderItemsContainer.appendChild(row);

                totalAmount += parseFloat(item.price);
            });
            document.getElementById('totalAmount').textContent = '$' + totalAmount.toFixed(2);
        }
        generateOrderNumber();
        var currentDate = new Date();
        var formattedDate = formatDate(currentDate);
        document.getElementById('orderDate').textContent = formattedDate;
        
        populateOrderItems(items);
    });
</script>
<%- include('templates/footer') %>