<%- include('templates/header-back-arrow') %>
<link rel="stylesheet" href="/css/availableHotels.css">

<!-- Page that displays queried hotels in
     available hotels page
     Note* Structure generated using ChatGPT40 with
     modification @author https://chat.openai.com/-->
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="my-4">Available Hotels</h1>
            </div>
            <% hotels.forEach(hotel=> { %>
                <div class="col-md-6 mb-4">
                    <div class="card hotel-card" id="<%= hotel._id %>">
                        <img src="/<%= hotel.imageURL %>" class="card-img-top" alt="<%= hotel.name %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= hotel.name %>
                            </h5>
                            <p class="card-text"><%= hotel.details %>
                            </p>
                            <p class="card-text"><strong>Rating:</strong>
                                <%= hotel.rating %>
                            </p>
                            <p class="card-text"><strong>Price:</strong> $<%= hotel.price %>
                            </p>
                            <p class="card-text"><strong>Region:</strong> <%= hotel.region %>
                            </p>
                            <p class="card-text"><strong>Available from:</strong>
                                <%= hotel.startDate.toDateString() %> to <%= hotel.endDate.toDateString() %>
                            </p>
                            <form action="/hotelSelection" method="POST">
                                <input type="hidden" name="hotelId" value="<%= hotel._id %>">
                                <button type="submit" class="btn btn-primary mt-2">View Details</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <%- include('templates/footer') %>