<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Hotel Summary</title>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="my-4">Available Hotels</h1>
            </div>
            <% hotels.forEach(hotel=> { %>
                <div class="col-md-6 mb-4">
                    <div class="card hotel-card" id="<%= hotel._id %>">
                        <img src="/<%= hotel.imageURL %>" class="card-img-top" alt="<%= hotel.name %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= hotel.name %>
                            </h5>
                            <p class="card-text">Hotel details: <%= hotel.details %>
                            </p>
                            <p class="card-text"><strong>Rating:</strong>
                                <%= hotel.rating %>
                            </p>
                            <p class="card-text"><strong>Price:</strong> $<%= hotel.price %>
                            </p>
                            <p class="card-text"><strong>Available from:</strong>
                                <%= hotel.startDate.toDateString() %> to <%= hotel.endDate.toDateString() %>
                            </p>
                            <form action="/hotelSelection" method="POST">
                                <input type="hidden" name="hotelId" value="<%= hotel._id %>">
                                <button type="submit" class="btn btn-primary mt-2">View Details</button>
                            </form>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>