<!-- flightType, travellers, fromInput, toInput, departDate, returnDate -->
<%- include('templates/header-back-arrow'); %>
    <div>
        <h2 class="text-center">Departing Flights Search Details:</h2>
        <div class="container">
            <p>Flight Type: <%= flightType%>
            </p>
            <p>Travellers: <%= travellers%>
            </p>
            <p>From Input: <%= fromInput%>
            </p>
            <p>To Input: <%= toInput%>
            </p>
            <p>Depart Date: <%= departDate%>
            </p>
            <p>Return Date: <%= returnDate%>
            </p>
        </div>
    </div>

    <!-- https://stackoverflow.com/questions/49141874/bootstrap-4-card-panel-with-image-left-of-header-and-title -->
    <div class="container">
        <div class="row justify-content-center ">
            <% departingFlights.forEach(function(flight, index) {%>
                <div class="container">
                    <div class="card flex-row flex-wrap d-flex" onclick="location.href='/flights/returning';" style="cursor: pointer;">
                        <div class="d-flex align-items-center justify-content-center ps-3">
                            <img src="/<%= flight.imageURL%>" class="image-fluid" alt="">
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Flight #: <%= flight.flightNumber %></h5>
                            <p class="card-text">Destination: <%= flight.destination %></p>
                            <p class="card-text">Departure Time: <%= flight.departureTime %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <%- include('templates/footer'); %>