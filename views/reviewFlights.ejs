                    </div>
                </div>
                <a class="d-block" data-bs-toggle="collapse" href="#collapse-collapsed-2"
                    aria-expanded="true" aria-controls="collapse-collapsed-2" id="heading-collapsed-2">
                    <i class="fas fa-chevron-down fa-lg" style="color: #062c43"></i>
                </a>
            </h5>
            <div id="collapse-collapsed-2" class="collapse show" aria-labelledby="heading-collapsed-2">
                <div class="d-flex justify-content-between align-items-center pe-3">
                    <div class="d-flex flex-column card-content p-2">
                        <div class="d-flex m-1">
                            <p class="card-text">Flight Type: <%= returningFlight.type %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Provider: <%= returningFlight.provider %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Model: <%= returningFlight.model %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Emissions: <%= returningFlight.emissions %>t CO2e
                            </p>
                        </div>
                    </div>
                    <div class="d-flex flex-column card-content p-2 align-self-start flex-fill">
                        <div class="d-flex m-1">
                            <p class="card-text">Departure Time: <%= returningFlight.departureTime %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Arrival Time: <%= returningFlight.arrivalTime %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Travellers: <%= travellers %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% totalPrice += returningFlight.price * travellers;%>
    
    <% } %>

    <div class="container text-center mb-3">
        <br>
        <br>
        <h2>Total Price: $<%= totalPrice%></h2>
        <br>
        <div class="button-container">
            <a href="/flightPayment" class="btn btn-dark btn-lg" role="button" type="submit" style="background-color: #062c43;">Pay</a>
        </div>
    </div>

    <%- include('templates/footer'); %>