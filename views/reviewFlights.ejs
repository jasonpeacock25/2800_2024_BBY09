<%- include('templates/header-back-arrow'); %>
<% let totalPrice = 0;%>

    <div>
        <h2 class="text-center">Review:</h2>
    </div>
    <div>
        <br>
        <h2 class="text-center">Departing Flights:</h2>
    </div>

    <div class="container">
        <div class="card mt-3">
            <h5 class="card-header d-flex justify-content-between align-items-center ps-1">
                <div class="d-flex align-items-center pe-2 ps-2">
                    <div id="imageDiv" style="max-height: 70x; max-width: 70px;">
                        <img src="/images/<%= departingFlight.provider%>.png"
                            alt="<%= departingFlight.provider%>"
                            style="max-height: 100%; max-width: 100%;">
                    </div>
                </div>
                <div class="d-flex flex-column card-content pe-3">
                    <div class="d-flex">
                        <p class="card-text bold noWrap">
                            <%= departingFlight.number %>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="card-text noWrap">From: <%= departingFlight.departing %>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="card-text noWrap">To: <%= departingFlight.arriving %>
                        </p>
                    </div>
                </div>
                <div class="d-flex flex-column card-content pe-3 flex-fill">
                    <div class="d-flex">
                        <p class="card-text bold noWrap">$<%= departingFlight.price * travellers%>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="card-text noWrap">Depart: <%=new Date(departingFlight.departureDate).toISOString().split('T')[0];%>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="card-text noWrap">Arrive: <%=new Date(departingFlight.arrivalDate).toISOString().split('T')[0];%>
                        </p>
                    </div>
                </div>
                <a class="d-block" data-bs-toggle="collapse" href="#collapse-collapsed-1"
                    aria-expanded="true" aria-controls="collapse-collapsed-1" id="heading-collapsed-1">
                    <i class="fas fa-chevron-down fa-lg" style="color: #062c43"></i>
                </a>
            </h5>
            <div id="collapse-collapsed-1" class="collapse show" aria-labelledby="heading-collapsed-1">
                <div class="d-flex justify-content-between align-items-center pe-3">
                    <div class="d-flex flex-column card-content p-2">
                        <div class="d-flex m-1">
                            <p class="card-text">Flight Type: <%= departingFlight.type %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Provider: <%= departingFlight.provider %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Model: <%= departingFlight.model %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Emissions: <%= departingFlight.emissions %>t CO2e
                            </p>
                        </div>
                    </div>
                    <div class="d-flex flex-column card-content p-2 align-self-start flex-fill">
                        <div class="d-flex m-1">
                            <p class="card-text">Departure Time: <%= departingFlight.departureTime %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Arrival Time: <%= departingFlight.arrivalTime %>
                            </p>
                        </div>
                        <div class="d-flex m-1">
                            <p class="card-text">Travellers: <%= travellers %>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% totalPrice += departingFlight.price * travellers;%>

    <% if(returningFlight){ %>
        <div>
            <br>
            <h2 class="text-center">Returning Flights:</h2>
        </div>

    <div class="container">
        <div class="card mt-3">
            <h5 class="card-header d-flex justify-content-between align-items-center ps-1">
                <div class="d-flex align-items-center pe-2 ps-2">
                    <div id="imageDiv" style="max-height: 70x; max-width: 70px;">
                        <img src="/images/<%= returningFlight.provider%>.png"
                            alt="<%= returningFlight.provider%>"
                            style="max-height: 100%; max-width: 100%;">
                    </div>
                </div>
                <div class="d-flex flex-column card-content pe-3">
                    <div class="d-flex">
                        <p class="card-text bold noWrap">
                            <%= returningFlight.number %>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="card-text noWrap">From: <%= returningFlight.departing %>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="card-text noWrap">To: <%= returningFlight.arriving %>
                        </p>
                    </div>
                </div>
                <div class="d-flex flex-column card-content pe-3 flex-fill">
                    <div class="d-flex">
                        <p class="card-text bold noWrap">$<%= returningFlight.price * travellers%>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="card-text noWrap">Depart: <%=new Date(returningFlight.departureDate).toISOString().split('T')[0];%>
                        </p>
                    </div>
                    <div class="d-flex">
                        <p class="card-text noWrap">Arrive: <%=new Date(returningFlight.arrivalDate).toISOString().split('T')[0];%>
