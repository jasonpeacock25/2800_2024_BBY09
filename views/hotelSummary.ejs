<%- include('templates/header-back-arrow') %>

<link rel="stylesheet" href="/css/hotelSummary.css">

<!-- Inside hotelSummary.ejs -->
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="my-4">
                <%= hotel.name %>
            </h1>
            <img src="/<%= hotel.imageURL %>" class="img-fluid mb-4" alt="<%= hotel.name %>">
            <p><strong>Hotel details:</strong>
                <%= hotel.details %>
            </p>
            <p><strong>Rating:</strong>
                <%= hotel.rating %>
            </p>
            <p><strong>Price:</strong> $<%= hotel.price %>
            </p>
            <p><strong>Available from:</strong>
                <%= hotel.startDate.toDateString() %> to <%= hotel.endDate.toDateString() %>
            </p><br><br>

            <!-- Reviews Section -->
            <div class="reviews">
                <h3>Previous Reviews</h3>
                <hr>
                <div class="review-scroll-box">
                    <% if (reviews && reviews.length > 0) { %>
                        <% reviews.slice().reverse().forEach(function(review) { %>
                            <div class="review">
                                <h4>
                                    <%= review.title %>
                                </h4>
                                <p>
                                    <%= review.details %>
                                </p>
                                <p><strong>Rating:</strong>
                                    <%= review.rating %>
                                </p>
                                <p><em>Reviewed on <%= review.date.toDateString() %></em></p>
                            </div>
                            <hr>
                        <% }); %>
                    <% } else { %>
                        <p>No reviews yet. Be the first to leave a review!</p>
                    <% } %>
                </div>
                <br><br>
            </div>

            <!-- Submit review form -->
            <form method="post" action="/submit-review">
                <input type="hidden" name="hotelId" value="<%= hotel._id %>">
                <div class="form-group">
                    <label for="review"><b>Leave a Review</b></label>
                    <input class="form-control" id="title" name="title" type="text" required placeholder="Title"><br>
                    <textarea class="form-control" id="details" name="details" rows="3" placeholder="Details" required></textarea><br>
                    <input class="form-control" id="rating" name="rating" type="number" min="1" max="10" required placeholder="Rating">
                </div>
                <button type="submit" class="btn btn-primary mt-3">Submit</button><br><br>
            </form>
        </div>
    </div>
</div>
<br><br>

<!-- CSS -->
<style>
    .review-scroll-box {
        max-height: 400px;
        overflow-y: scroll;
        border: 1px solid #ccc;
        padding: 10px;
    }

    .review-scroll-box .review {
        margin-bottom: 20px;
    }
</style>

