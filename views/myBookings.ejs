    <h2 class="text-center">Hotels</h2>
    <div class="container">
        <div class="row justify-content-center ">
            <% hotels.forEach(function(hotel, index) {%>
                <div class="col-md-4 mb-4" id="hotels-<%= index %>">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Hotel name: <%= hotel.hotelName %>
                            </h5>
                            <p class="card-text">Rating: <%= hotel.hotelRating %>
                            </p>
                            <p class="card-text">Price: $<%= hotel.hotelPrice %>
                            </p>
                            <p class="card-text">Location: <%= hotel.hotelRegion %>
                            </p>

                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>
    <%- include('templates/footer') %>