<%- include('templates/header-hamburger') %>
    <h1 class="display-6 text-center">My Bookings</h1>
    <br>

    <h2 class="text-center">Departing Flights</h2>
    <div class="container">
                <% for(let i=0; i < departingFlights.length; i++){%>
                    <div class="card mt-3">
                        <h5 class="card-header d-flex justify-content-between align-items-center ps-1"
                            onclick="headerClicked(event, '<%=JSON.stringify(departingFlights[i])%>')">
                            <div class="d-flex align-items-center pe-2 ps-2">
                                <div id="imageDiv" style="max-height: 70x; max-width: 70px;">
                                    <img src="/images/<%= departingFlights[i].provider%>.png"
                                        alt="<%= departingFlights[i].provider%>"
                                        style="max-height: 100%; max-width: 100%;">
                                </div>
                            </div>
                            <div class="d-flex flex-column card-content pe-3">
                                <div class="d-flex">
                                    <p class="card-text bold noWrap">
                                        <%= departingFlights[i].number %>
                                    </p>
                                </div>
                                <div class="d-flex">
                                    <p class="card-text noWrap">From: <%= departingFlights[i].departing %>
                                    </p>
                                </div>
                                <div class="d-flex">
                                    <p class="card-text noWrap">To: <%= departingFlights[i].arriving %>
                                    </p>
                                </div>
                            </div>
                            <div class="d-flex flex-column card-content pe-3 flex-fill">
                                <div class="d-flex">
                                    <p class="card-text bold noWrap">$<%= departingFlights[i].price *
                                            departingFlights[i].travellers%>
                                    </p>
                                </div>
                                <div class="d-flex">
                                    <p class="card-text noWrap">Depart: <%=
                                            departingFlights[i].departureDate.toISOString().split('T')[0]; %>
                                    </p>
                                </div>
                                <div class="d-flex">
                                    <p class="card-text noWrap">Arrive: <%=
                                            departingFlights[i].arrivalDate.toISOString().split('T')[0]; %>
                                    </p>
                                </div>
                            </div>
                            <a class="collapsed d-block" data-bs-toggle="collapse" href="#collapse-collapsed-<%=i%>-d"
                                aria-expanded="false" aria-controls="collapse-collapsed-<%=i%>-d"
                                id="heading-collapsed-<%=i%>-d">
                                <i class="fas fa-chevron-down fa-lg" style="color: #062c43"></i>
                            </a>
                        </h5>
                        <div id="collapse-collapsed-<%=i%>-d" class="collapse" aria-labelledby="heading-collapsed-<%=i%>-d">
                            <div class="d-flex justify-content-between align-items-center pe-3">
                                <div class="d-flex flex-column card-content p-2">
                                    <div class="d-flex m-1">
                                        <p class="card-text">Flight Type: <%= departingFlights[i].type %>
                                        </p>
                                    </div>
                                    <div class="d-flex m-1">
                                        <p class="card-text">Provider: <%= departingFlights[i].provider %>
                                        </p>
                                    </div>
                                    <div class="d-flex m-1">
                                        <p class="card-text">Model: <%= departingFlights[i].model %>
                                        </p>
                                    </div>
                                    <div class="d-flex m-1">
                                        <p class="card-text">Emissions: <%= departingFlights[i].emissions %>t CO2e
                                        </p>
                                    </div>
                                </div>
                                <div class="d-flex flex-column card-content p-2 align-self-start flex-fill">
                                    <div class="d-flex m-1">
                                        <p class="card-text">Departure Time: <%= departingFlights[i].departureTime %>
                                        </p>
                                    </div>
                                    <div class="d-flex m-1">
                                        <p class="card-text">Arrival Time: <%= departingFlights[i].arrivalTime %>
                                        </p>
                                    </div>
                                    <div class="d-flex m-1">
                                        <p class="card-text">Travellers: <%= departingFlights[i].travellers %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }; %>
    </div>


