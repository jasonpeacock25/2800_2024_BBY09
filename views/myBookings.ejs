<%- include('templates/header-hamburger') %>
    <h1 class="display-6 text-center">My Bookings</h1>
    <br>
    
    
        <h2 class="text-center">Departing Flights</h2>
        <div class="container">
            <div class="row justify-content-center ">
                <% departingFlights.forEach(function(flight, index) {%>
                    <div class="col-md-4 mb-4" id="departing-flights-<% index %>">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Flight Number: <%= flight.flightNumber %>
                                </h5>
                                <p class="card-text">Destination: <%= flight.destination %>
                                </p>
                                <p class="card-text">Departure Time: <%= flight.departureTime %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    
    
        <h2 class="text-center">Return Flights</h2>
        <div class="container">
            <div class="row justify-content-center ">
                <% returnFlights.forEach(function(flight, index) {%>
                    <div class="col-md-4 mb-4" id="return-flight-<%= index %>">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Flight Number: <%= flight.flightNumber %>
                                </h5>
                                <p class="card-text">Destination: <%= flight.destination %>
                                </p>
                                <p class="card-text">Departure Time: <%= flight.departureTime %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    
   
        <h2 class="text-center">Hotels</h2>
        <div class="container">
            <div class="row justify-content-center ">
                <% hotels.forEach(function(hotel, index) {%>
                    <div class="col-md-4 mb-4" id="hotels-<%= index %>">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">Name: <%= hotel.name %>
                                </h5>
                                <p class="card-text">Rating: <%= hotel.rating %>
                                </p>
                                <p class="card-text">Price: $<%= hotel.price %>
                                </p>
                                <p class="card-text">Location: <%= hotel.location %>
                                </p>
                                <p class="card-text">Check-in Date: <%= hotel.startDate %>
                                </p>
                                <p class="card-text">Check-out Date: <%= hotel.endDate %>
                                </p>
                                <p class="card-text">Details: <%= hotel.details %>
                                </p>
        
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
        <%- include('templates/footer') %>